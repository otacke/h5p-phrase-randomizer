[
  {
    "name": "headline",
    "type": "text",
    "label": "Headline",
    "description": "Optional headline to show above cards.",
    "optional": true
  },
  {
    "name": "introduction",
    "type": "text",
    "label": "Introduction",
    "description": "Optionally set some introduction.",
    "default": "<p style=\"text-align: center;\"></p>",
    "optional": true,
    "widget": "html",
    "enterMode": "div",
    "tags": [
      "sub",
      "sup",
      "strong",
      "em",
      "p",
      "code",
      "u",
      "del",
      "a",
      "ul",
      "ol",
      "h1",
      "h2",
      "h3",
      "h4",
      "h5",
      "h6",
      "pre",
      "hr",
      "table"
    ],
    "font": {
      "size": true,
      "color": true,
      "background": true
    }
  },
  {
    "name": "segments",
    "type": "list",
    "label": "Segments",
    "entity": "segment",
    "min": 2,
    "max": 6,
    "widgets": [
      {
        "name": "VerticalTabs",
        "label": "Default"
      },
      {
        "name": "PhraseRandomizerTextualEditor",
        "label": "Textual"
      }
    ],
    "field": {
      "name": "segments",
      "type": "group",
      "label": "Segments",
      "fields": [
        {
          "name": "title",
          "type": "text",
          "label": "Segment title",
          "optional": true
        },
        {
          "name": "options",
          "type": "list",
          "label": "Options",
          "entity": "option",
          "min": 2,
          "field": {
            "name": "text",
            "type": "text",
            "label": "Text for option"
          }
        },
        {
          "name": "colorBackground",
          "type": "text",
          "label": "Background color",
          "default": "rgb(255, 255, 255)",
          "widget": "colorSelector",
          "optional": true,
          "spectrum": {
            "showInput": true,
            "showInitial": true,
            "showPalette": true,
            "preferredFormat": "rgb",
            "palette": [
              [
                "#96ceb4",
                "#ffeead",
                "#ff6f69",
                "ffcc5c",
                "#88d8b0"
              ],
              [
                "#845ec2",
                "#d65db1",
                "#ff6f91",
                "#ff9671",
                "#ffc75f"
              ],
              [
                "#a8e6cf",
                "#dcedc1",
                "#ffd3b6",
                "#ffaaa5",
                "#ff8b94"
              ],
              [
                "#009688",
                "#35a79c",
                "#54b2a9",
                "#65c3ba",
                "#83d0c9"
              ]
            ]
          }
        }
      ]
    }
  },
  {
    "name": "mode",
    "type": "select",
    "label": "Mode",
    "options": [
      {
        "value": "free",
        "label": "Free"
      },
      {
        "value": "quiz",
        "label": "Quiz"
      }
    ],
    "default": "free"
  },
  {
    "name": "solutions",
    "type": "group",
    "label": "Solutions",
    "widget": "PhraseRandomizerSolutionsList",
    "fields": [
      {
        "name": "solutions",
        "type": "list",
        "label": "Solutions",
        "entity": "solution",
        "field": {
          "name": "solutionSelector",
          "type": "text",
          "label": "Solution",
          "widget": "PhraseRandomizerSolutionSelector"
        }
      },
      {
        "name": "dummy",
        "type": "boolean",
        "label": "Dummy",
        "widget": "none"
      }
    ]
  },
  {
    "name": "solution",
    "type": "text",
    "label": "Solution",
    "description": "Enter the desired solution for the lock. Please note that using long solutions may be suboptimal on small devices.",
    "default": "0123",
    "widget": "none"
  },
  {
    "name": "audio",
    "type": "group",
    "importance": "low",
    "label": "Audio settings",
    "fields": [
      {
        "name": "useDefaultClickPreviousNext",
        "type": "boolean",
        "label": "Use inbuilt sound for click on next button or previous button",
        "optional": false,
        "default": true
      },
      {
        "name": "clickPreviousNext",
        "type": "audio",
        "label": "Click on next button or previous button",
        "description": "Will be played when the user clicks on the previous button or next button.",
        "importance": "low",
        "optional": true,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "useDefaultClickPreviousNext",
              "equals": false
            }
          ]
        }
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "importance": "low",
    "label": "Behavioural settings",
    "widget": "showWhen",
    "showWhen": {
      "rules": [
        {
          "field": "mode",
          "equals": "quiz"
        }
      ],
      "nullWhenHidden": true
    },
    "fields": [
      {
        "name": "maxAttempts",
        "type": "number",
        "label": "Maximum attempts",
        "description": "Enter the maximum number of attempts allowed or leave empty to not limit the number.",
        "min": 1,
        "optional": true
      },
      {
        "name": "enableRetry",
        "type": "boolean",
        "label": "Enable \"Retry\" button",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableSolutionsButton",
        "type": "boolean",
        "label": "Enable \"Show Solution\" button",
        "importance": "low",
        "default": true,
        "optional": true
      }
    ]
  },
  {
    "name": "l10n",
    "type": "group",
    "label": "User interface",
    "common": true,
    "fields": [
      {
        "name": "check",
        "type": "text",
        "label": "Check",
        "default": "Check"
      },
      {
        "name": "submit",
        "type": "text",
        "label": "Submit",
        "default": "Submit"
      },
      {
        "name": "showSolution",
        "type": "text",
        "label": "Show solution",
        "default": "Show solution"
      },
      {
        "name": "retry",
        "type": "text",
        "label": "Retry",
        "default": "Retry"
      },
      {
        "name": "lockOpen",
        "type": "text",
        "label": "Lock open",
        "default": "Lock open!"
      },
      {
        "name": "lockDisabled",
        "type": "text",
        "label": "Lock disabled",
        "default": "No more attempts. Lock disabled."
      },
      {
        "name": "correctCombination",
        "type": "text",
        "label": "Solution",
        "default": "This combination opens the lock."
      },
      {
        "name": "wrongCombination",
        "type": "text",
        "label": "Wrong combination",
        "default": "This combination does not open the lock."
      },
      {
        "name": "noMessage",
        "type": "text",
        "label": "No message",
        "default": "..."
      },
      {
        "name": "scoreDisplay",
        "description": "@current and @total are placeholders and will be replaced by the respective values.",
        "type": "text",
        "label": "Score display",
        "default": "@current / @total"
      },
      {
        "name": "foundSolutionsTitle",
        "type": "text",
        "label": "Found solutions",
        "default": "Found solutions"
      },
      {
        "name": "none",
        "type": "text",
        "label": "None",
        "default": "None"
      }
    ]
  },
  {
    "name": "a11y",
    "type": "group",
    "label": "Accessibility texts",
    "common": true,
    "fields": [
      {
        "name": "check",
        "type": "text",
        "label": "Assistive technology description for \"Check\" button",
        "importance": "low",
        "default": "Check whether the combination opens the lock."
      },
      {
        "name": "showSolution",
        "type": "text",
        "label": "Assistive technology description for \"Show Solution\" button",
        "importance": "low",
        "default": "Show the solution. The correct symbols that will open the lock will be displayed."
      },
      {
        "name": "retry",
        "type": "text",
        "label": "Assistive technology description for \"Retry\" button",
        "importance": "low",
        "default": "Retry the task. Reset all lock segments and start the task over again."
      },
      {
        "name": "currentText",
        "type": "text",
        "label": "Assistive technology description for current symbol",
        "description": "@text is a placeholder and will be replaced by the respective value.",
        "importance": "low",
        "default": "Current symbol: @text"
      },
      {
        "name": "currentTexts",
        "type": "text",
        "label": "Assistive technology description for current symbols",
        "description": "@texts is a placeholder and will be replaced by the respective value.",
        "importance": "low",
        "default": "Current symbols: @texts"
      },
      {
        "name": "previousSymbol",
        "type": "text",
        "label": "Assistive technology description for previous symbol button",
        "importance": "low",
        "default": "Previous symbol"
      },
      {
        "name": "nextSymbol",
        "type": "text",
        "label": "Assistive technology description for next symbol button",
        "importance": "low",
        "default": "Next symbol"
      },
      {
        "name": "spinSegment",
        "type": "text",
        "label": "Assistive technology description for spin button",
        "importance": "low",
        "default": "Spin segment"
      },
      {
        "name": "correctCombination",
        "type": "text",
        "label": "Assistive technology description for announcing correct combination",
        "description": "@combination is a placeholder and will be replaced by the respective value.",
        "importance": "low",
        "default": "This combination opens the lock. @combination."
      },
      {
        "name": "wrongCombination",
        "type": "text",
        "label": "Assistive technology description for announcing a wrong combination",
        "default": "Wrong combination"
      },
      {
        "name": "disabled",
        "type": "text",
        "label": "Assistive technology description for announcing \"disabled\"",
        "default": "disabled"
      },
      {
        "name": "combinationLock",
        "type": "text",
        "label": "Assistive technology description for announcing \"combination lock\"",
        "default": "combination lock"
      },
      {
        "name": "toolbar",
        "type": "text",
        "label": "Assistive technology description for announcing the current segment",
        "description": "@number and @total are placeholders and will be replaced by the respective values.",
        "default": "Segment @number of @total"
      },
      {
        "name": "segment",
        "type": "text",
        "label": "Assistive technology description for toolbar",
        "default": "Toolbar"
      },
      {
        "name": "buttonAudioActive",
        "type": "text",
        "label": "Audio button (unmuted)",
        "default": "Mute audio. Currently unmuted."
      },
      {
        "name": "buttonAudioInactive",
        "type": "text",
        "label": "Audio button (muted)",
        "default": "Unmute audio. Currently muted."
      }
    ]
  }
]
